<ul class="button-group">
  <li><%= link_to 'New Board', new_board_path, class: 'small button' %></li>
</ul>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>Description</th>
      <th>Time</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.event %></td>
        <td><%= link_to 'Open', board_path(board) %> <%= link_to 'Edit', edit_board_path(board) %> <%= link_to 'Delete', board_path(board), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
